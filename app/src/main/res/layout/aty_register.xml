<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_divider_block"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/v_base_top_bar" />

    <include layout="@layout/v_base_divider_bar" />

    <include layout="@layout/v_base_divider_line" />

    <include layout="@layout/v_user_input_phone" />

    <include layout="@layout/v_base_divider_line" />

    <include layout="@layout/v_base_divider_bar" />

    <include layout="@layout/v_base_divider_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/c_main_white_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/page_margin_left"
            android:layout_marginStart="@dimen/page_margin_left"
            android:ems="3"
            android:text="@string/identify_code"
            android:textColor="@color/c_main_text2"
            android:textSize="@dimen/site_title_text_size" />

        <com.jointem.base.view.ClearEditText
            android:id="@+id/et_identify_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:drawableEnd="@mipmap/ic_clear_account"
            android:drawableRight="@mipmap/ic_clear_account"
            android:hint="@string/prompt_identify_code"
            android:inputType="number"
            android:maxLength="6"
            android:maxLines="1"
            android:textCursorDrawable="@drawable/ic_base_et_cursor"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_gain_code"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/default_padding"
            android:background="@drawable/bg_user_gain_pressed_enabled"
            android:enabled="false"
            android:text="@string/gain"
            android:textColor="@color/c_main_white_bg" />
    </LinearLayout>

    <include layout="@layout/v_base_divider_line" />

    <include layout="@layout/v_base_divider_bar" />

    <include layout="@layout/v_base_divider_line" />

    <include layout="@layout/v_user_input_password" />

    <include layout="@layout/v_base_divider_line" />

    <include layout="@layout/v_base_divider_bar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="@string/password_regular" />

    <include layout="@layout/v_user_button_login" />
</LinearLayout>
