<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/v_list_data_empty"/>

    <LinearLayout
        android:id="@+id/ll_guide_search_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_main_white_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/window_list_category_1"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="8dp"
            android:text="历史搜索"
            android:textColor="@color/c_secondary_text"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/c_divider" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.jointem.base.view.CustomListView02
                    android:id="@+id/lv_guide_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/list_divider"
                    android:dividerHeight="0.3dp"
                    android:scrollbars="none" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/c_divider" />

                <TextView
                    android:id="@+id/tv_guide_search_clear_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="清空搜索记录"
                    android:textColor="@color/c_secondary_text" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/c_divider" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</RelativeLayout>